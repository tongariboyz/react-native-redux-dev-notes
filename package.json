{
  "name": "react-native-redux-dev-notes",
  "private": true,
  "license": "MIT",
  "version": "0.0.0",
  "description": "Development Rules and Knowledge for React Native + Redux.",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "prepublish": "gitbook install",
    "start": "npm-run-all --parallel serve watch",
    "serve": "gitbook serve",
    "build": "gitbook build",
    "eslint": "npm-run-all eslint:*",
    "eslint:js": "eslint src/**/*.js",
    "eslint:md": "eslint -c .md.eslintrc --ext .md ja/**/*.md",
    "textlint": "summary-to-path | xargs textlint -f pretty-error",
    "test": "npm-run-all test:* textlint eslint:* build",
    "test:js": "mocha",
    "watch": "npm-run-all --parallel watch:*",
    "watch:test-js": "mocha --watch src/",
    "watch:eslint-js": "chokidar src/**/*.js -c 'npm run -s eslint:md'",
    "watch:eslint-md": "chokidar ja/**/*.md -c 'npm run -s eslint:js'",
    "watch:textlint": "chokidar './*.md' 'ja/**/*.md' -c 'npm run -s textlint'"
  },
  "keywords": [
    "gitbook",
    "react",
    "react-native",
    "redux",
    "textlint"
  ],
  "devDependencies": {
    "babel": "^6.0.12",
    "babel-eslint": "^4.1.3",
    "chokidar-cli": "^1.1.1",
    "eslint": "^1.7.3",
    "eslint-config-kanmu": "^8.0.0",
    "eslint-plugin-markdown": "git://github.com/eslint/eslint-plugin-markdown.git",
    "eslint-plugin-react": "^3.7.0",
    "espower-babel": "^3.3.0",
    "gitbook-cli": "^1.0.0",
    "gitbook-plugin-include-codeblock": "^1.4.0",
    "gitbook-plugin-japanese-support": "0.0.1",
    "gitbook-summary-to-path": "^1.0.1",
    "mocha": "^2.3.3",
    "npm-run-all": "^1.2.12",
    "power-assert": "^1.1.0",
    "technical-word-rules": "^1.2.4",
    "textlint": "^4.2.2",
    "textlint-plugin-jtf-style": "^0.8.5",
    "textlint-rule-max-ten": "^1.2.2",
    "textlint-rule-no-mix-dearu-desumasu": "^1.4.0",
    "textlint-rule-no-start-duplicated-conjunction": "^1.0.6",
    "textlint-rule-prh": "^2.1.0",
    "textlint-rule-spellcheck-tech-word": "^4.1.0"
  }
}
